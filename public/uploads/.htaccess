# Security untuk folder uploads

# Mencegah eksekusi file PHP dan file sensitif

# Prevent execution of PHP files

<Files "\*.php">
Order Deny,Allow
Deny from all
</Files>

# Prevent access to sensitive files

<FilesMatch "\.(htaccess|htpasswd|ini|log|sh|inc|bak|sql)$">
Order Deny,Allow
Deny from all
</FilesMatch>

# Allow only image files

<FilesMatch "\.(jpg|jpeg|png|gif|webp|bmp)$">
Order Allow,Deny
Allow from all
</FilesMatch>

# Set proper headers for images

<IfModule mod_headers.c>
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|bmp)$">
        Header set Cache-Control "public, max-age=31536000"
        Header set Expires "Thu, 31 Dec 2025 23:59:59 GMT"
    </FilesMatch>
</IfModule>
